{
  "name": "@qlik/eslint-config",
  "version": "0.1.0",
  "description": "Qlik's ESLint config for typescript",
  "repository": "git@github.com:qlik-oss/dev-tools-js.git",
  "license": "ISC",
  "main": "index.js",
  "files": [
    "mods",
    "index.js",
    "node.js",
    "esm.js",
    "react.js",
    "svelte.js",
    "vitest.js",
    "playwright.js",
    "react-svelte.js"
  ],
  "scripts": {
    "format:check": "prettier --check '**' --ignore-unknown",
    "format:write": "prettier --write '**' --ignore-unknown",
    "lint": "eslint ."
  },
  "prettier": "@qlik/prettier-config",
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "@typescript-eslint/parser": "5.59.7",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-playwright": "0.12.0",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-svelte": "2.29.0",
    "eslint-plugin-vitest": "0.2.3",
    "svelte-eslint-parser": "0.29.0"
  },
  "devDependencies": {
    "@qlik/prettier-config": "workspace:*",
    "eslint": "8.41.0",
    "prettier": "2.8.8"
  },
  "peerDependencies": {
    "eslint": "*"
  },
  "optionalDependencies": {
    "svelte": "^3.59.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
